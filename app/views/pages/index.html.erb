<h1>Pages#index</h1>
<p><%= link_to "New", {:action => 'new'}, class: "page new" %></p>

<% @pages.each do |page|%>
  <%= page.name%>
  <%= page.permalink%>
  <%= page.position%>
  <%= page.visible%>
  <%= link_to "Show", {:action => 'show', :id => page.id} %>
  <%= link_to "Edit", {:action => 'edit', :id => page.id} %>
  <%= link_to "Delete", {:action => 'delete', :id => page.id} %>
<% end %>
